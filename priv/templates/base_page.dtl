<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>{% block title %}Page title{% endblock %}</title>
<link rel="stylesheet" href="/s/main.css"/>
<link rel="shortcut icon" href="/s/favicon.ico" type="image/x-icon" />
<script>
console.log("init");
var user_menu_popup = document.getElementById("user_menu_popup");
document.getElementById("user_menu").onclick=function(){
	console.log("click");
	user_menu_popup.style="display:block;visible:visible;"
}

</script>
{% block headers %}{% endblock %}
</head>
<body>
<div id=header>
{% block login %}
{% if user %}Welcome <span id="user_menu" class="menu">{{ user.name|default:"User" }}<img class="login_img" src="/s/triangle.png"/></span><div id="user_menu_popup">IM THE MENU</div> | <a href="/blogs/">Blogs</a> | <a href="/tools">Tools</a> | <a href="/logout">Logout<a> |{% else %}Please <a href="/login">login</a>  |{% endif %}
{% endblock %}<a href="/about">About</a>
</div>
<div id=content>
{% block content %}
   Content here
{% endblock %}
</div>
</body>
</html>
